<?xml version="1.0" encoding="UTF-8"?>

<Configuration  status="DEBUG">

 <Properties> 
        <Property name="basePath">./logs</Property> 
    </Properties>
 <!-- Expath log not generated in Log file or console-->
    <Appenders>
        <!-- Console Appender -->
        <Console name="CONSOLE" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <!-- RollingFile Appender -->
        <RollingFile name="File" fileName="${basePath}/automation.log" filePattern="${basePath}/automation-%d{yyyy-MM-dd-HH-mm-ss}.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
            <SizeBasedTriggeringPolicy size="50000"/>
        </RollingFile>
    </Appenders>

    <Loggers> 
        <Root level="DEBUG"><!-- Here you can use multiple log levels All < Trace < Debug < Info< Warn < Error-->
            <!-- Root logger that references the appenders -->
            <AppenderRef ref="CONSOLE"/>
             <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>